<!--Form for sign up in center-->
<!--iphone rose gold color-->
 
    
<form class="form-signin" id="main-login-background">
  <div class="container">
    <div class="row justify-content-center"> <!-- Center the row -->
      <div class="col-md-6">
        <div class="login-logo-div">
        <img src="/img/logo copy.jpg" alt="" width="200" height="100" >
        </div>
        <h1 class="sign-in-text">Please sign in</h1>

        <div class="form-floating">
          <input type="email" class="form-control email-input" id="floatingInput" placeholder="name@example.com">
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control password-input" id="floatingPassword" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>

        <div class="form-check text-start my-3">
          <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
            Remember this device?
          </label>
                  <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        </div>
      </div>
    </div>
  </div>
  <p class="mt-5 mb-3 text-body-secondary text-center">&copy; The Gamerz Blog</p>
  </div>
</form>
<button id="toggle-form-button">Switch to Register</button>
<form class="signup-form" id="signup-form" style="display: none;"></form>
<script src="login.js"></script>